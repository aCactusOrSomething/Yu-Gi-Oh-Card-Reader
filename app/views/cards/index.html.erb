<% content_for :title, "Search for \"" + @term +  "\" - Yugioh Card Viewer" %>

<p>Search results for <%= @term %> </p>

<table class="table table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Type</th>
    </tr>
  </thead>
  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= link_to card.name, card_path(card) %></td>
        <td><%= card.card_type %></td>
      </tr>
    <% end %>
  </tbody>
</table>